+#ifdef LOCAL_PEEREID
+static gboolean
+ck_nb_getpeeruucred(int socket_fd, pid_t *pid, uid_t *uid)
+{
+	struct unpcbid cred;
+	socklen_t len = sizeof(cred);
+
+	if (getsockopt(socket_fd, 0, LOCAL_PEEREID, &cred, &len) < 0)
+		return FALSE;
+
+	if (pid)
+		*pid = cred.unp_pid;
+	if (uid)
+		*uid = cred.unp_euid;
+
+	return TRUE;
+}
+#endif
+
