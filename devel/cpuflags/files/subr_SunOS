# $NetBSD: subr_SunOS,v 1.3 2008/12/18 01:01:33 abs Exp $

AWK=nawk
SED=sed

display_hw_details()
    {
    cat <<END
OS		: '`uname`'
arch            : '$hw_arch'
psrinfo         : '$hw_psrinfo'
END
    }

extract_hw_details()
    {
    hw_arch=`/usr/bin/uname -m`
    hw_psrinfo=`psrinfo -pv | $AWK 'NR==3{print}'` # Just gets the first CPU
    }

determine_arch()
    {
    ARCH=
    case $hw_arch in
	sun4c | sun4 )		ARCH='-mcpu=cypress' ;;
	sun4m )			ARCH='-mcpu=supersparc' ;;
	sun4u )			ARCH='-mcpu=v9' ;;
	i86pc )
	    include subr_x86	# this provides map_x86_brand_string()
	    ARCH=`map_x86_brand_string "$cpu_brand"`
	    if [ -z "$ARCH" ] ; then
		case "$hw_psrinfo" in
		    *)
		esac
	    fi
	    ;;
    esac
    echo $ARCH
    }

determine_features()
    {
    echo
    }
