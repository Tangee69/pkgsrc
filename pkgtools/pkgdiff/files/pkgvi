set -e

progname=`basename $0`
editor="vi"
if [ "$PKGEDITOR" != "" ]; then
	editor="$PKGEDITOR"
elif [ "$EDITOR" != "" ]; then
	editor="$EDITOR"
fi

die() {
	_exitcode=$1; shift
	warn "$@"
	exit ${_exitcode}
}

warn() {
	echo >&2 "$@"
}

usage() {
	die 1 "Usage: $progname [+cmd] file [...]"
}

prepare_backup_files() {
	for file in $@; do
		[ -f "$file" ] || die 2 "$progname: $file: No such file"
		chmod u+w "$file"
		if [ -f "$file.orig" ]; then
			echo "$progname: Backup already exists."
		else
			cp "$file" "$file.orig"
		fi
	done
}

remove_unneeded_backup_files() {
	for file in $@; do
		if cmp "$file" "$file.orig" >/dev/null 2>&1; then
			echo "$progname: File unchanged."
			rm -f "$file.orig"
		else
			echo "$progname: File was modified. For a diff, type:"
			echo "pkgdiff \"$file\""
		fi
	done
}

main() {
	[ $# -eq 0 ] && usage

	cmd=""
	case "$1" in
		+*)	cmd="$1"; shift	;;
	esac

	prepare_backup_files "$@"

	$editor $cmd $@

	remove_unneeded_backup_files "$@"
}

main "$@"
exit $?
